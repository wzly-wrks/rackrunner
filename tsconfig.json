{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@rackrunner/utils/*": ["packages/utils/*"],
      "@rackrunner/types": ["packages/types"],
      "@rackrunner/types/*": ["packages/types/*"]
    }
  },
  "include": ["packages", "apps", "types"],
  "exclude": ["node_modules", "dist"]
}
